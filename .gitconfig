[github]
  user = jtkirk

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "status"]
  added = yellow
  changed = green
  untracked = blue
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

  [core]
  	editor = atom --wait
